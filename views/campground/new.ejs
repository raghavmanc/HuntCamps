<%layout('layout/boilerplate') %>
  <div class="row">
      <h1 class="text-center">New Campground</h1>
      <div class="col-6 offset-3">
        
        <form action="/campgrounds" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label"for="title">Title</label>
                <input class="form-control" name="campground[title]" type="text" id="title" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="loc">Location</label>
                <input class="form-control" name="campground[location]" type="text" id="loc" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="img">Image URL</label>
                <input class="form-control" name="campground[image]" type="text" id="img" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Price ($)</span>
                <input name="campground[price]" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                <span class="input-group-text">.00</span>
                <div class="valid-feedback">Looks good!</div>
              </div>
              
            <div class="mb-3">
                <label class="form-label" for="description">Descriptipn</label>
                <textarea class="form-control" name="campground[description]" type="text" id="description" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="my-3"><button class="btn btn-success">Make Campground!</button></div>
        </form>
        
        <a href="/campgrounds">All Campgrounds</a> 
      </div>
  </div>

